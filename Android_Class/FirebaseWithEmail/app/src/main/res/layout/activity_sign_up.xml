<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/mailSET"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your mail"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/passSET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Password"
        android:inputType="number"
        android:layout_margin="10dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/signInSBtn"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_signid"
        android:layout_gravity="right"
        android:background="@android:color/system_notification_accent_color"
        android:textSize="15sp"/>

    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do not have account?"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/signUpSBtn"
        android:background="@android:color/holo_red_dark"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_signup"
        android:layout_gravity="right"
        android:textSize="15sp"/>

</LinearLayout>